<h1>New Cat Form</h1>

<form action="<%= cats_url %>" method="POST">

    <label for="name">Name:
        <input type = "text" id= "name" name= "cat[name]"> 
    </label>

    <label for="M">Male:
        <input type = "radio" id = "M" name = "cat[sex]" value = "M">
    </label>

    <label for="F">Female:
        <input type = "radio" id = "F" name = "cat[sex]" value = "F">
    </label>
    

    <select name ="cat[color]">
        <option value = "black">black</option>
        <option value = "brown">brown</option>
        <option value = "blue">blue</option>
        <option value = "red">red</option>
    </select>

    <label for="birth_date">birth_date
        <input type= "date" id = "birth_date" name = "cat[birth_date]" >
    </label>

    <label for="description">Description:
        <textarea id= "description" name= "cat[description]"></textarea>
    </label>

    <button type= "submit">Submit</button>

</form>